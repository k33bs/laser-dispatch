name = "github-to-discord"
main = "src/index.ts"
compatibility_date = "2024-01-01"
workers_dev = false

# Cron trigger - runs every hour
[triggers]
crons = ["0 * * * *"]

# KV namespace for tracking posted commits
[[kv_namespaces]]
binding = "EAT_LASERS_GITHUB_POSTED_CACHE"
id = "YOUR_KV_NAMESPACE_ID"

# Secrets (set via `wrangler secret put <NAME>`):
# - EAT_LASERS_GITHUB_DISCORD_WEBHOOK_URL: Your Discord webhook URL
# - EAT_LASERS_GITHUB_TOKEN: (Optional) GitHub token for private repos or higher rate limits
#
# Repos are configured in src/index.ts
